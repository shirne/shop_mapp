/**app.wxss**/

page {
    display: block;
    min-height: 100%;
    background: #f0f0f2;
    color: #101010;
    /*font-family:Rotobo,'SF Pro Display','Microsoft YaHei',PingFangSC,'Noto SansCJK',helvetica,'Heiti SC';*/
    font-size: 28rpx;
}

radio {
    width: 40rpx;
    color: #ffa200;
}

checkbox {
    color: #ffa200;
}

swiper {
    width: 100%;
    height: 290rpx;
}

swiper swiper-item image {
    width: 100%;
    height: 100%;
}

.button-box {
    text-align: center;
}

button, button[type=default] {
    display: inline-block;
    line-height: 60rpx;
    height: 60rpx;
    background-color: transparent;
    color: #3498db;
    border-color: #3498db;
    font-size: 28rpx;
    border-radius: 10rpx;
    padding-left: 50rpx;
    padding-right: 50rpx;
}

button::after, button[type=default]::after {
    border-color: #3498db;
    /*border-radius:10rpx;*/
}

button:active, button[type=default]:active, .button-hover {
    color: #3498db;
    background-color: transparent;
    border-color: #3498db;
}

button:active::after, button[type=default]:active::after {
    border-color: #3498db;
}

button[type=grey] {
    background-color: transparent;
    color: #999;
}

button[type=grey]::after {
    border-color: #e8e8e8;
}

button[type=grey]:active, button[type=grey].button-hover {
    background-color: transparent;
    color: #999;
}

button[type=grey]:active::after {
    border-color: #e8e8e8;
}

.btn-large {
    line-height: 88rpx;
    height: 88rpx;
}

.notbutton {
    padding: 0;
    border: 0;
    line-height: 1.2em;
    height: auto;
    border-radius: 0;
}

.notbutton::after {
    border: 0;
}

.input-placeholder {
    color: #bbb;
    min-height: 10rpx;
}

navigator, .links {
    font-size: 24rpx;
    line-height: 44rpx;
    color: #4a90e2;
    text-align: center;
}

.float_left {
    float: left;
}

.float_right {
    float: right;
}

.emptytip {
    padding-left: 30rpx;
    line-height: 100rpx;
    height: 100rpx;
    color: #999;
}

.text_over {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    display: block;
    width: 100%;
}

.uploadbox {
    text-align: center;
}

.uploadbox .file-upload {
    width: 200rpx;
    height: 200rpx;
    margin: 50rpx auto 20rpx auto;
    border-radius: 400rpx;
    background: transparent;
}

.uploadbox text {
    display: block;
    text-align: center;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.main-container {
    width: 100%;
    display: flex;
    flex-direction: column;
}
.tabbox{
    display: flex;
    flex-direction: row;
    margin-top:20rpx;
    width:100%;
}
.tabbox .tabitem{
    white-space: nowrap;
    color:#3498db;
    border:1rpx #3498db solid;
    line-height: 50rpx;
    text-align: center;
    flex:1;
}
.tabbox view:first-child{
    margin-left:30rpx;border-radius: 10rpx 0 0 10rpx;
}
.tabbox view:last-child{
    margin-right:30rpx;border-radius:0 10rpx 10rpx 0;
}
.tabbox .itemhover{
    color:#fff;
    background:#3498db;
}
.block {
    margin: 20rpx 0 0 0;
    background: #fff;
    width: 100%;
}

.block-ttl {
    padding: 15rpx 20rpx;
}

.block-ttl {
    font-size: 32rpx;
    font-weight: bold;
    border-bottom:1rpx #ccc solid;
}

.block-content {
    padding: 20rpx;
}
.squareimg{padding-top:100%;width:100%;position:relative;}
.squareimg image{position:absolute;width:100%;height:100%;left:0;top:0;background-size:contain;}

.newsitem{width:100%;display:flex;flex-direction: row;margin-bottom:20rpx;height:128rpx;}
.newsitem .imgbox{width:160rpx;height:120rpx;margin-right:20rpx;}
.newsitem .imgbox image{width:160rpx;height:120rpx;}
.newsitem .infobox{flex:1;display:flex;flex-direction: column;height:100%;}
.newsitem .infobox .infotitle{font-weight:bold;width:100%;line-height:32rpx;display:block;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.newsitem .infobox .infodesc{flex:1;overflow: hidden;font-size:24rpx;line-height:30rpx;height:64rpx;word-break: break-all;margin-top:4rpx;}
.newsitem .infobox .infomation{color:#999;font-size:24rpx;line-height:30rpx;margin-top:6rpx;}

.imglist{display:flex;flex-direction: row;flex-wrap: wrap;padding:0 0 20rpx 20rpx;}
.imgitem{width: 40%;flex:1;margin:20rpx 20rpx 0 0;display:flex;flex-direction: column;background:#f0f0f2;box-shadow: #f0f0f0 1rpx 1rpx 10rpx;}
.imgitem .imgbox{padding-top:100%;width:100%;position:relative;}
.imgitem .imgbox image{position:absolute;width:100%;height:100%;left:0;top:0;}
.imgitem .ttlbox{padding:10rpx 20rpx;text-align: center;}
.imgitem .ttlbox .infotitle{display:block;text-align:center;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}

.emptyitem{background:transparent;border:0;box-shadow: none;}

.arrow-list{
    display:flex;
    flex-direction: column;
    border-top:1rpx #eee solid;
    background:#fff;
    width:100%;
}
.arrow-list .rowitem{
    display:flex;
    flex-direction: row;
    border-bottom:1rpx #eee solid;
    padding:20rpx 0;
    line-height:40rpx;
}
.rowitem .preicon{
    margin-left:30rpx;
    margin-top:0rpx;
    width: 40rpx;
    height: 40rpx;
    margin-right:20rpx;
}
.rowitem .title{
    margin-left:30rpx;
}
.rowitem .desc{
    flex:1;
    text-align: right;
    color:#999;
    height:40rpx;
    overflow: hidden;
}
.rowitem .arrow{
    margin-right:30rpx;
    width:30rpx;
    height:40rpx;
}

.headfix{
    width: 100%;
    position: fixed;
    top:0;left:0;
    background:#fff;
    box-shadow: #f0f0f0 0 1rpx 10rpx;
}
.head-tab {
    display: flex;
    flex-direction: row;
    margin: 0 20rpx;
}

.tab-item {
    width: 15%;
    flex-grow: 1;
    font-size: 28rpx;
    line-height: 90rpx;
    height: 90rpx;
    text-align: center;
    position: relative;
}

.tab-item::after {
    content: "";
    display: block;
    position: absolute;
    border-bottom: 6rpx #3498db solid;
    left: 50%;
    width: 0;
    bottom: 0;
    transition: all 0.3s ease-in-out;
}

.head-tab .active::after {
    width: 100%;
    left: 0;
}

loading{
    width:100%;
}

/*富文本样式*/
.content{
    padding:20rpx;
}
rich-text{
    font-size:24rpx;
}
rich-text .tag_p{
    text-indent:2em;
}
rich-text .tag_img{
    max-width: 100%;
}

.maskbox{position:fixed;width:100%;height:100%;background:rgba(0,0,0,0);left:100%;top:0;z-index:100;transition:background .5s ease-out;}
.maskopen{left:0; background:rgba(0,0,0,.3);}
.maskclose{left:0;}
.maskbox .panel{position:absolute;background:#fff;top:120%;height:70%;width:100%;transition:top .3s ease-out;display:flex;flex-direction: column;}
.maskopen .panelopen{top:30%;z-index: 10} 

.input-group{display:flex;flex-direction:row;width: 30%;margin-left: 20rpx;}
.input-group input{flex:1;text-align:center;border-top:1rpx #e8e8e8 solid;border-bottom:1rpx #e8e8e8 solid;padding-left:15rpx;min-height:50rpx;height:50rpx;line-height:50rpx;}
.input-group .input-group-addon{background:transparent;border:1px #e8e8e8 solid;width:50rpx;height:50rpx;}

.btngroup{display:flex;flex-direction: row;width:100%;padding-bottom:10rpx;}
.btngroup button{width:40%;border-radius:0;color:#fff;border:0;}
.btngroup button::after{border:0;}
.btngroup .cartbtn{background:#ffa200;}
.btngroup .orderbtn{background:#4A90E2;}

.fixed-bottom{
    position:fixed;
    bottom:0;
    width:100%;
    height:100rpx;
    background:#fff;
    box-shadow: 0 0 8rpx rgba(0,0,0,.3);
    display:flex;
    flex-direction: row;
}
.fixed-bottom .btnboxes{
    flex:1 1 auto;
}
.fixed-bottom .button{
    height:100rpx;
    padding:0 30rpx;
    line-height:100rpx;
    background:#3498db;
    color:#fff;
}

image {
    background: url('data:image/png;base64,') center center no-repeat #fff;
}

.picture {
    background-size: 200rpx;
}

.sm-picture {
    background-size: 60%;
}

.avatar, .logo {
    background-color: #f0f0f2;
    background-size: 100%;
}

.nobg, .icon {
    background: transparent;
}
