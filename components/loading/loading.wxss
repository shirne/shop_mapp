/* Components/loading/loading.wxss */
.line-seperator {
    width: 100%;
    border-top: 1rpx #d5d5d6 solid;
    position: relative;
    height: 2rpx;
    margin: 40rpx 0 50rpx 0;
}

.ls-inner {
    position: absolute;
    left: 0;
    top: -15rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.ls-inner text {
    display: block;
    font-size: 24rpx;
    color: #bbb;
    padding: 0 20rpx;
    background: #f0f0f2;
    line-height: 30rpx;
    white-space: nowrap;
}

.loadingbox {
    text-align: center;
    padding: 80rpx 0;
}

.loadingbox image {
    width: 64rpx;
    height: 64rpx;
    background: transparent;
}
.nocontents{
    margin:100rpx auto;
    text-align: center;
    color:#999;
}